{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<h1>Lise des utilisateurs</h1>
{% for user in users %}
    <table>
        <thead>
            <th>Username</th>
            <th>Email</th>
        </thead>
        <tbody>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
        <td><a href="{{ path('modify_user', {'id': user.id}) }}">Modifier</a></td>
        </tbody>
    </table>
{% endfor %}
{% endblock %}