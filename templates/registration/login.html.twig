{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}


{% block body %}
<h1 style="text-align:center">Connexion</h1>
 <form action="{{path('security_login')}}" method="post">
     <div class="form-group">
         <input type="text" placeholder="Tapez votre login" class="form-control" required name="_username ">

     </div>
       <div class="form-group">
         <input type="text" placeholder="Tapez votre mot de passe" class="form-control" required name="_password"/>

     </div>
     <div class="form-group">
         <button type="submit" style="margin:auto;display:block" class="btn btn-success">Connexion</button>
     </div>

 </form>
     
     {% endblock %}